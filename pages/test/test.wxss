.bottom_box {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 1000;
    width: 100%;
  
    background: #202020;
    filter: alpha(opacity=90);
    -moz-opacity: .9;
    opacity: .9;
}

 

.bottom {
    width: 100%;
    padding-left: 10px;
    height: auto;
    margin: 4px auto;
    color: #fff;
    line-height: 30px;

    position: relative;
}

.word_selected {
   color: green;
}

.bottom_h1 {
    font-size: 18px;
}

.bottom_span {
    width: 100%;
    padding: 2px 2px 2px 2px;
}

.close {
    position: absolute;
    right: 20px;
    top: 10px;
    width: 18px;
    height: 18px; 
}

.close_h3 {
    color: white;
}


.content {
    width: 100%;
    padding: 2px 2px 2px 2px;
    display:block;
}

ul li {
    list-style-type: none;
    display:block;
    padding: 2px 8px 2px 4px;
}
